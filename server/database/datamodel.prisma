
type User {
  id: ID! @id
  username: String!
  email: String! @unique
  hash: String!
  salt: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}


type File {
  id: ID! @id
  filename: String!
  mimetype: String!
  encoding: String!
  originalFilename: String!
  path: String!
}

type Genre {
  id: ID! @id
  name: String!
  gameContents: [GameContent!]!
}


type Nation {
  id: ID! @id
  name: String!
  gameContent: [GameContent]
}
type GameContent {
  id: ID! @id
  genres: [Genre] @relation(link: TABLE)
  title: String!
  content: String!
  productionYear: Int!
  ProductionNation: Nation @relation(link:INLINE)
  mainImage: String
  subImage: String
}